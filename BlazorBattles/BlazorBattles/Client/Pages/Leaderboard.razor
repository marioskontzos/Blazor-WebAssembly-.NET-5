@page "/leaderboard"

<h3>Leaderboard</h3>

@if (LeaderboadService.Leaderboard == null)
	{
<span>Loading Leaderboard...</span>
}
else
{
    <table class="table">
        <thead >
            <tr>
                <th>#</th>
                <th>User</th>
                <th>Victories</th>
                <th>Defeats</th>
                <th>Battles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in LeaderboadService.Leaderboard)
            {
                <tr style="@GetMyStyle(entry.UserId)">
                    <td>@entry.Rank</td>
                    <td>@entry.Username</td>
                    <td>@entry.Victories</td>
                    <td>@entry.Defeats</td>
                    <td>@entry.Battles</td>
                    <td>
                        @if (entry.UserId != MyUserId)
                        {
                            <button class="btn btn-primary" @onclick="@(() => StartBattle(entry.UserId))">
                                Fight
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
